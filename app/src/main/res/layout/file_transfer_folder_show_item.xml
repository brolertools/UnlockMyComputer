<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/file_transfer_folder_current_folder_item"
    android:foreground="?android:attr/selectableItemBackground"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:clickable="true"
    android:focusable="true"
    android:layout_marginTop="4dp"
    android:layout_height="wrap_content"
    android:layout_width="match_parent">

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/linear_margin"
    >

    <ImageView
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_menu_send"
        />

    <LinearLayout
        android:layout_marginLeft="@dimen/linear_margin"
        android:layout_marginRight="@dimen/linear_margin"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/file_transfer_folder_current_folder_fileName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="文件"
            android:textSize="20dp"
            android:textColor="@color/black"
            />
        <TextView
            android:id="@+id/file_transfer_folder_current_folder_attr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="文件夹"
            />

    </LinearLayout>


</LinearLayout>

</androidx.cardview.widget.CardView>